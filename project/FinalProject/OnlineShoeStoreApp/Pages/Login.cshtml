@page
@model OnlineShoeStoreApp.Pages.LoginModel
@{
    ViewData["Title"] = "Логин";
}

<h4>Авторизация</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Login" class="control-label"></label>
                <input asp-for="Input.Login" class="form-control" />
                <span asp-validation-for="Input.Login" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" class="control-label"></label>
                <input asp-for="Input.Password" class="form-control" type="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Войти" class="btn btn-primary" />
            </div>
        </form>

        <form method="post" asp-page-handler="Guest" class="mt-2">
            <div class="form-group">
                <input type="submit" value="Войти как гость" class="btn btn-secondary" />
            </div>
        </form>

        <div class="mt-3">
            <p class="text-muted">Для тестирования:</p>
            <small><strong>Логин:</strong> admin | <strong>Пароль:</strong> admin</small>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-page="/Index">Вернуться на главную</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}