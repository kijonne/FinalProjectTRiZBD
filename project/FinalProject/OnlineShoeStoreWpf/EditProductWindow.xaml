<Window x:Class="OnlineShoeStoreWpf.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineShoeStoreWpf"
        mc:Ignorable="d"
        Title="Редактирование товара" Height="600" Width="600"
        FontFamily="Times New Roman" FontSize="16"
        Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Артикул" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="ArticleTextBox" Grid.Row="0" Height="40" Margin="0,25,0,0"/>

        <TextBlock Text="Цена" Grid.Row="1" Margin="0,20,0,5"/>
        <TextBox x:Name="PriceTextBox" Grid.Row="1" Height="40" Margin="0,25,0,0"/>

        <TextBlock Text="Скидка" Grid.Row="2" Margin="0,20,0,5"/>
        <TextBox x:Name="DiscountTextBox" Grid.Row="2" Height="40" Margin="0,25,0,0"/>

        <TextBlock Text="Количество" Grid.Row="3" Margin="0,20,0,5"/>
        <TextBox x:Name="QuantityTextBox" Grid.Row="3" Height="40" Margin="0,25,0,0"/>

        <TextBlock Text="Описание" Grid.Row="4" Margin="0,20,0,5"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Row="4" Height="40" Margin="0,25,0,0"/>

        <TextBlock Text="Размер" Grid.Row="5" Margin="0,20,0,5"/>
        <TextBox x:Name="SizeTextBox" Grid.Row="5" Height="40" Margin="0,25,0,0"/>

        <TextBlock Text="Цвет" Grid.Row="6" Margin="0,20,0,5"/>
        <TextBox x:Name="ColorTextBox" Grid.Row="6" Height="40" Margin="0,25,0,0"/>

        <TextBlock Text="Категория" Grid.Row="7" Margin="0,20,0,5"/>
        <ComboBox x:Name="CategoryComboBox" Grid.Row="7" Height="40" Margin="0,25,0,0"/>

        <TextBlock Text="Производитель" Grid.Row="8" Margin="0,20,0,5"/>
        <ComboBox x:Name="ManufacturerComboBox" Grid.Row="8" Height="40" Margin="0,25,0,0"/>

        <TextBlock Text="Поставщик" Grid.Row="9" Margin="0,20,0,5"/>
        <ComboBox x:Name="SupplierComboBox" Grid.Row="9" Height="40" Margin="0,25,0,0"/>

        <TextBlock Text="Фото" Grid.Row="10" Margin="0,20,0,5"/>
        <Button Content="Выбрать фото" Grid.Row="10" Height="40" Margin="0,25,0,0" Click="ChoosePhotoButton_Click"/>

        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40">
            <Button Content="Сохранить" Width="150" Height="50" Click="SaveButton_Click" Background="#00FA9A"/>
            <Button Content="Отмена" Width="150" Height="50" Click="CancelButton_Click" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
