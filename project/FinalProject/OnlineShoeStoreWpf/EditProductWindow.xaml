<Window x:Class="OnlineShoeStoreWpf.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineShoeStoreWpf"
        mc:Ignorable="d"
        Title="Редактирование товара" Height="600" Width="600"
        FontFamily="Times New Roman" FontSize="16"
        Background="White">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Артикул:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Article}" Margin="0,0,0,10"/>

            <TextBlock Text="Название:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Name}" Margin="0,0,0,10"/>

            <TextBlock Text="Описание:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Description}" Height="60" AcceptsReturn="True" Margin="0,0,0,10"/>

            <TextBlock Text="Цена:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Price}" Margin="0,0,0,10"/>

            <TextBlock Text="Скидка (%):" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Discount}" Margin="0,0,0,10"/>

            <TextBlock Text="Количество:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Quantity}" Margin="0,0,0,10"/>

            <TextBlock Text="Категория:" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" DisplayMemberPath="Name" Margin="0,0,0,10"/>

            <TextBlock Text="Производитель:" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Manufacturers}" SelectedItem="{Binding SelectedManufacturer}" DisplayMemberPath="Name" Margin="0,0,0,10"/>

            <TextBlock Text="Поставщик:" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Suppliers}" SelectedItem="{Binding SelectedSupplier}" DisplayMemberPath="Name" Margin="0,0,0,10"/>

            <TextBlock Text="Единица измерения:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Unit}" Margin="0,0,0,10"/>

            <TextBlock Text="Фото:" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Text="{Binding PhotoName}" IsReadOnly="True" Width="250"/>
                <Button Content="Выбрать фото" Click="ChoosePhoto_Click" Margin="5,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Сохранить" Click="Save_Click" Width="100" Margin="0,20,10,0"/>
                <Button Content="Отмена" IsCancel="True" Width="100" Margin="0,20,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
