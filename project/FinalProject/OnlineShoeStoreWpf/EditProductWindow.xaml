<Window x:Class="OnlineShoeStoreWpf.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineShoeStoreWpf"
        mc:Ignorable="d"
        Title="Редактирование товара" Height="600" Width="600"
        FontFamily="Times New Roman" FontSize="16"
        Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Информация о товаре" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Артикул -->
                <TextBlock Text="Артикул:" Margin="0,0,0,5"/>
                <TextBox x:Name="ArticleBox" Margin="0,0,0,15"/>

                <!-- Цена -->
                <TextBlock Text="Цена:" Margin="0,0,0,5"/>
                <TextBox x:Name="PriceBox" Margin="0,0,0,15"/>

                <!-- Скидка -->
                <TextBlock Text="Скидка (%):" Margin="0,0,0,5"/>
                <TextBox x:Name="DiscountBox" Margin="0,0,0,15"/>

                <!-- Количество -->
                <TextBlock Text="Количество:" Margin="0,0,0,5"/>
                <TextBox x:Name="QuantityBox" Margin="0,0,0,15"/>

                <!-- Описание -->
                <TextBlock Text="Описание:" Margin="0,0,0,5"/>
                <TextBox x:Name="DescriptionBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,15"/>

                <!-- Размер -->
                <TextBlock Text="Размер:" Margin="0,0,0,5"/>
                <TextBox x:Name="SizeBox" Margin="0,0,0,15"/>

                <!-- Цвет -->
                <TextBlock Text="Цвет:" Margin="0,0,0,5"/>
                <TextBox x:Name="ColorBox" Margin="0,0,0,15"/>

                <!-- Пол -->
                <TextBlock Text="Пол:" Margin="0,0,0,5"/>
                <ComboBox x:Name="GenderCombo" Margin="0,0,0,15">
                    <ComboBoxItem Content="Мужской" Tag="0"/>
                    <ComboBoxItem Content="Женский" Tag="1"/>
                </ComboBox>

                <!-- Категория -->
                <TextBlock Text="Категория:" Margin="0,0,0,5"/>
                <ComboBox x:Name="CategoryCombo" DisplayMemberPath="Name" SelectedValuePath="CategoryId" Margin="0,0,0,15"/>

                <!-- Производитель -->
                <TextBlock Text="Производитель:" Margin="0,0,0,5"/>
                <ComboBox x:Name="ManufacturerCombo" DisplayMemberPath="Name" SelectedValuePath="ManufacturerId" Margin="0,0,0,15"/>

                <!-- Поставщик -->
                <TextBlock Text="Поставщик:" Margin="0,0,0,5"/>
                <ComboBox x:Name="SupplierCombo" DisplayMemberPath="Name" SelectedValuePath="SupplierId" Margin="0,0,0,15"/>

                <!-- Фото -->
                <TextBlock Text="Фото товара:" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Image x:Name="ProductImage" Width="150" Height="150" Stretch="Uniform" Margin="0,0,15,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <Button Content="Выбрать фото" Click="SelectPhotoButton_Click" Padding="10,5" Margin="0,0,0,10"/>
                        <TextBlock x:Name="PhotoNameText" Text="Файл не выбран" FontSize="12" Foreground="Gray"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Click="SaveButton_Click" Padding="20,8" Margin="0,0,10,0" 
                    Background="#28a745" Foreground="White" BorderThickness="0" FontSize="14" Cursor="Hand"/>
            <Button Content="Отмена" Click="CancelButton_Click" Padding="20,8" 
                    Background="#6c757d" Foreground="White" BorderThickness="0" FontSize="14" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
