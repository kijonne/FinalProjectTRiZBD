<Window x:Class="OnlineShoeStoreWpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineShoeStoreWpf"
        mc:Ignorable="d"
        Title="Авторизация" FontFamily="Times New Roman" FontSize="18"
        Background="White" Height="450" Width="600">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Форма -->
        <StackPanel Grid.Row="1">
            <!-- Логин -->
            <TextBlock Text="Логин:" Margin="0,0,0,8" FontSize="14"/>
            <TextBox x:Name="LoginBox" Height="35" FontSize="14" Padding="10,8" Margin="0,0,0,20"/>

            <!-- Пароль -->
            <TextBlock Text="Пароль:" Margin="0,0,0,8" FontSize="14"/>
            <PasswordBox x:Name="PasswordBox" Height="35" FontSize="14" Padding="10,8" Margin="0,0,0,10"/>

            <!-- Сообщение об ошибке -->
            <TextBlock x:Name="ErrorText" Text="" Foreground="Red" FontSize="13" 
                       TextWrapping="Wrap" Margin="0,10,0,0" Visibility="Collapsed"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <Button Content="Войти" Click="LoginButton_Click" Height="40" FontSize="16" FontWeight="Bold"
                    Background="#007bff" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="0,0,0,10"/>

            <Button Content="Войти как гость" Click="GuestButton_Click" Height="40" FontSize="14"
                    Background="#6c757d" Foreground="White" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
