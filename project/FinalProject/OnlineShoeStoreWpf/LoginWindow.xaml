<Window x:Class="OnlineShoeStoreWpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineShoeStoreWpf"
        mc:Ignorable="d"
        Title="Авторизация" FontFamily="Times New Roman" FontSize="18"
        Background="White" Height="450" Width="600">
    <StackPanel>
        <TextBlock Text="Логин" Margin="0,0,0,10"/>
        <TextBox x:Name="LoginTextBox" Grid.Row="1" Height="40" FontSize="18" Margin="0,30,0,0"/>

        <TextBlock Text="Пароль" Margin="0,20,0,10"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Height="40" FontSize="18" Margin="0,30,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,0">
            <Button x:Name="LoginButton" Content="Войти" Width="200" Height="60" Margin="0,0,30,0"
                    Background="#00FA9A" Foreground="Black" FontSize="20" FontWeight="Bold" Click="LoginButton_Click"
                    />
            <Button x:Name="GuestButton" Content="Войти как гость" Width="250" Height="60"
                    Background="LightGray" FontSize="20" FontWeight="Bold" Click="GuestButton_Click"
                    />
        </StackPanel>
    </StackPanel>
</Window>
